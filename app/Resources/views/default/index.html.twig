{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1><span>Welcome to</span> Bistro_Test App</h1>
            </div>

            <div class="grid-block">
                <h2>Bonus Cards</h2>

                {#{{ form_start(form) }}#}
                {#{{ form_widget(form) }}#}
                {#{{ form_end(form) }}#}


                {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
                {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_label(form.series) }}
                        {{ form_errors(form.series) }}
                        {{ form_widget(form.series, {'attr': {'class': 'form-control', 'placeholder': '3 digits'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.expInterval) }}
                        {{ form_errors(form.expInterval) }}
                        {{ form_widget(form.expInterval, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.amount) }}
                        {{ form_errors(form.amount) }}
                        {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    {{ form_widget(form.send, {'attr': {'class': 'btn btn-default'}}) }}

                {{ form_end(form) }}


                {% for flash_message in app.session.flashBag.get('notice') %}
                    <div class="flash-notice">
                        {{ flash_message }}
                    </div>
                {% endfor %}

                {{ grid(grid, 'APYDataGridBundle::blocks_js.jquery.html.twig') }}

            </div>

        </div>
    </div>
{% endblock %}

